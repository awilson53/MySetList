@model MySetList.Models.ChordChart
@{
    ViewBag.Title = "EnterSongChart";
}

<h2>Enter Song Information</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ChordChart</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SongTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SongTitle)
            @Html.ValidationMessageFor(model => model.SongTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArtistName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ArtistName)
            @Html.ValidationMessageFor(model => model.ArtistName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SongText)
        </div>
        <div class="editor-songfield">
            @Html.TextBoxFor(model => model.SongText, new { @class = "songtextstyle" })
            @Html.ValidationMessageFor(model => model.SongText)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}